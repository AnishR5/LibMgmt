generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id            BigInt          @id @default(autoincrement())
  phone         String          @unique
  email         String?         @unique
  password_hash String
  createdAt     DateTime        @default(now()) @db.Timestamptz

  organisations organisations[]
}

model organisations {
  id                  BigInt    @id @default(autoincrement())
  name                String
  timezone            String    @default("Asia/Kolkata")
  contactPhone        String? 
  contactEmail        String?
  totalTables         Int       @default(0)
  defaultMonthlyFee   BigInt    @default(0) // in paise
  createdAt           DateTime  @default(now()) @db.Timestamptz
  updatedAt           DateTime  @updatedAt @db.Timestamptz

  userId              BigInt
  user                users     @relation(fields: [userId], references: [id])

  subscribers         Subscriber[]
  subscriptions       Subscription[]
  payments            Payment[]
  notificationLogs    NotificationLog[]
}

model Subscriber {
  id         BigInt    @id @default(autoincrement())
  org        organisations @relation(fields: [orgId], references: [id], onDelete: Cascade)
  orgId      BigInt
  phone      String
  name       String?
  email      String?
  createdAt  DateTime  @default(now()) @db.Timestamptz
  updatedAt  DateTime  @updatedAt @db.Timestamptz

  subscriptions Subscription[]

  @@unique([orgId, phone])
}

model Subscription {
  id              BigInt    @id @default(autoincrement())
  org             organisations @relation(fields: [orgId], references: [id], onDelete: Cascade)
  orgId           BigInt
  subscriber      Subscriber @relation(fields: [subscriberId], references: [id], onDelete: Cascade)
  subscriberId    BigInt
  startDate       DateTime   @db.Timestamptz
  endDate         DateTime   @db.Timestamptz
  status          String     @default("active") // active | expired | cancelled
  autoRenew       Boolean    @default(false)
  createdAt       DateTime   @default(now()) @db.Timestamptz
  updatedAt       DateTime   @updatedAt @db.Timestamptz

  payments        Payment[]
  notificationLogs NotificationLog[]

  @@index([orgId, endDate])
  @@index([orgId, status])
}

model Payment {
  id             BigInt    @id @default(autoincrement())
  org            organisations @relation(fields: [orgId], references: [id], onDelete: Cascade)
  orgId          BigInt
  subscription   Subscription? @relation(fields: [subscriptionId], references: [id], onDelete: SetNull)
  subscriptionId BigInt?
  amount         BigInt
  currency       String    @default("INR")
  method         String?
  txnId          String?
  paidAt         DateTime  @default(now()) @db.Timestamptz
  createdAt      DateTime  @default(now()) @db.Timestamptz

  @@index([subscriptionId])
}

model NotificationLog {
  id             BigInt   @id @default(autoincrement())
  org            organisations? @relation(fields: [orgId], references: [id], onDelete: SetNull)
  orgId          BigInt?
  subscription   Subscription? @relation(fields: [subscriptionId], references: [id], onDelete: SetNull)
  subscriptionId BigInt?
  channel        String
  toAddress      String
  type           String
  status         String
  providerMsgId  String?
  errorMessage   String?
  payload        Json?
  createdAt      DateTime @default(now()) @db.Timestamptz
  sentAt         DateTime? @db.Timestamptz
}
